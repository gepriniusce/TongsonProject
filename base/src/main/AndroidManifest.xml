<?xml version="1.0" encoding="utf-8"?>
<manifest package="pr.tongson.base"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".ui.actionbar.BaseActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.actionbar.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.actionbar.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.actionbar.TabActivity"
            android:label="@string/title_activity_tab"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.actionbar.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity
            android:name=".ui.actionbar.BasicActivity"
            android:label="@string/title_activity_basic"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>